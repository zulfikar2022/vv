<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ViralVabi | <%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="/js/menu-toggler.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script> -->
  </head>
  <body class="bg-gray-100">
    <nav class="bg-white shadow-md sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex-shrink-0 text-2xl font-extrabold text-indigo-600">
            VV
          </div>

          <!-- Desktop Nav -->
          <ul class="hidden md:flex space-x-6 text-gray-700 font-medium">
            <li><a href="/web" class="hover:text-indigo-600">Home</a></li>
            <li>
              <a href="/web/dashboard" class="hover:text-indigo-600"
                >Dashboard</a
              >
            </li>
            <li>
              <a href="/web/profile" class="hover:text-indigo-600 underline"
                >Profile</a
              >
            </li>
            <li>
              <a href="/api/logout" class="hover:text-indigo-600">Logout</a>
            </li>
          </ul>

          <!-- Mobile Hamburger -->
          <div class="md:hidden">
            <button id="menu-toggle" class="text-gray-700 focus:outline-none">
              <!-- Hamburger Icon -->
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M4 6h16M4 12h16M4 18h16"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Nav Items -->
      <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
        <ul class="space-y-2 text-gray-700 font-medium">
          <li>
            <a href="/web" class="block py-2 px-3 hover:bg-indigo-50 rounded"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/web/dashboard"
              class="block py-2 px-3 hover:bg-indigo-50 rounded"
              >Dashboard</a
            >
          </li>
          <li>
            <a
              href="/web/profile"
              class="block py-2 px-3 hover:bg-indigo-50 rounded underline"
              >Profile</a
            >
          </li>
          <li>
            <a
              href="/api/logout"
              class="block py-2 px-3 hover:bg-indigo-50 rounded"
              >Logout</a
            >
          </li>
        </ul>
      </div>
    </nav>

    <main
      class="flex-grow w-[80%] md:w-[90%] mx-auto py-8 flex justify-center items-start"
    >
      <div
        class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md text-center"
      >
        <h1 class="text-3xl font-bold text-gray-800 mb-6">User Profile</h1>

        <!-- User Profile Information -->
        <div class="space-y-4">
          <div class="p-4 bg-gray-50 rounded-lg">
            <p class="text-sm font-medium text-gray-600">Full Name:</p>
            <!-- EJS to display user's name -->
            <p class="text-xl font-semibold text-indigo-700">
              <%= user.name %>
            </p>
          </div>

          <div class="p-4 bg-gray-50 rounded-lg">
            <p class="text-sm font-medium text-gray-600">Links Generated:</p>
            <!-- EJS to display number of links generated -->
            <p class="text-xl font-semibold text-indigo-700">
              <%= user. total_url %>
            </p>
          </div>

          <p class="text-gray-600 text-sm mt-6">
            This is your personal profile page. Here you can see a summary of
            your activity. More features coming soon!
          </p>
        </div>
      </div>
    </main>

    <footer class="text-center py-4 bg-gray-200 mt-8">
      <div class="text-gray-700">
        <div>
          <a class="underline" href="https://github.com/NurHossain-nur"
            >Owned by Nur Hossain</a
          >
        </div>
        <div>
          <a class="underline" href="https://github.com/zulfikar2022"
            >Developed by Sayed Zulfikar Mahmud</a
          >
        </div>
      </div>
    </footer>
  </body>
</html>
